{% extends 'BackBase.html.twig' %}

{% block title %}Users index{% endblock %}

{% block content %}
    <h1>Users accounts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Email</th>


                <th>Image</th>

                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.fullName }}</td>
                <td>{{ user.email }}</td>



                <td><img src="{{ asset('/uploads/'~user.img) }}" alt="" width="150"></td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>

                <td>
                    <a href="{{ path('backanduser_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('backanduser_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backanduser_new') }}">Create new</a>
    <a href="{{ path('backanduser_list') }}">dowloads</a>
{% endblock %}
