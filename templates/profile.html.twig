{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_login') }}">Logout</a>
        </div>
    {% endif %}
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>FullName</th>
            <td>{{ user.fullName }}</td>
        </tr>



        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>

        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>


        <tr>
            <th>Img</th>
            <td><img src="{{ asset('/uploads/'~user.img) }}" alt="" width="150"></td>
        </tr>

        </tbody>
    </table>




        <button class="btn btn-lg btn-primary mt-5  " >
            <a href="{{ path('app_profile_edit', {'email': user.email }) }}" class="btn btn-primary btn-lg ">Edit</a>
        </button>


{% endblock %}